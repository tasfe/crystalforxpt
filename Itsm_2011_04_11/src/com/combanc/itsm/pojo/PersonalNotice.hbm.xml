<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.combanc.itsm.pojo.PersonalNotice" table="personal_notice" catalog="itsm">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="increment" />
		</id>
		
		<!--可以用,用户登录的Id,来表示这封通知是属于谁的;-->
		<property name="userId" type="long">
			<column name="userId_" />
		</property>

		<!--通知的标题;-->
		<property name="title" type="java.lang.String">
			<column name="title_" />
		</property>
		
		<!-- 通知的发送时间; -->
		<property name="date" type="timestamp">
			<column name="date_" />
		</property>
		
		<!--通知的正文;-->
		<property name="content" type="java.lang.String">
			<column name="content_" />
		</property>
		
		<!--谁发的通知;通知的发送者;-->
		<property name="from" type="string">
			<column name="from_" />
		</property>
		
		<!--通知发给谁;通知的接受者;-->
		<property name="to" type="string">
			<column name="to_" />
		</property>
		
		<!--表示抄送的信息; -->
		<property name="cc" type="timestamp">
			<column name="cc_" />
		</property>
		
		<!--表示通知的状态:是读了,还是未读;  -->
		<property name="read" type="boolean">
			<column name="read_"/>
		</property>
		
		<!--表示通知的位置:是在收件箱,还是在发件箱,还是在草稿箱里面;-->
		<property name="usertype" type="int">
			<column name="usertype_"/>
		</property>
		
	</class>
	
</hibernate-mapping>
